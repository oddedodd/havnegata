---
import { urlFor } from "../utils/image";
// Props: name, tagline, bgImage (optional)
const { name, tagline, bgImage } = Astro.props;

const bgImageUrl = bgImage ? urlFor(bgImage).width(1200).height(600).url() : null;
---

<div class="relative h-screen w-full h-96 flex items-center justify-center overflow-hidden rounded-lg" style={`background: ${bgImageUrl ? `url('${bgImageUrl}') center/cover no-repeat` : '#f9e6ef'};`}>
  <!-- Overlay for pastel effect -->
  <div class="absolute inset-0 bg-pink-200 opacity-60"></div>
  <!-- Content -->
  <div class="relative z-20 flex flex-col items-center justify-center w-full">
    <span class="text-white text-xl sm:text-2xl font-body font-medium mb-2 tracking-wide" style="text-shadow: 1px 1px 4px #d48fcf;">
      {name}
    </span>
    <h1 class="text-5xl sm:text-6xl font-headline font-extrabold text-white mb-2 px-4" style="text-shadow: 3px 4px 0 #f472b6, 0 2px 8px #d48fcf;">
      {tagline}
    </h1>
  </div>
</div>

---
const { links } = Astro.props;
import { Facebook, Instagram, Twitter, Linkedin, Youtube, Link } from '@lucide/astro';
---

<div class="container mx-auto px-4 py-8 max-w-3xl">
  {links.map((link) => (
    <a href={link.url} class="text-white text-xl sm:text-2xl font-body font-light mb-2 tracking-wide">
      {link.title}
    </a>
  ))}
  <Facebook />
  <Instagram />
  <Twitter />
  <Linkedin />
  <Youtube />
  <Link />
</div>
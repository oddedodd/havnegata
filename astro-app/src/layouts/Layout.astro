---
// View transitions are now handled differently in Astro 5
// https://docs.astro.build/en/guides/view-transitions/
import OpenGraphTags from "../components/OpenGraphTags.astro";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";

interface Props {
  title: string;
  ogTitle?: string;
  ogDescription?: string;
  ogUrl?: string;
  ogImage?: string;
  ogLocale?: string;
}

const { 
  title, 
  ogTitle, 
  ogDescription, 
  ogUrl, 
  ogImage, 
  ogLocale 
} = Astro.props;

// Use provided OG values or fall back to defaults
const finalOgTitle = ogTitle || title;
const finalOgDescription = ogDescription || "Opplev hyggelig handel i Havnegata - Nisjebutikker i Namsos sentrum";
const finalOgUrl = ogUrl || Astro.url.href;
const finalOgImage = ogImage || "/hero-image.jpg";
const finalOgLocale = ogLocale || "nb_NO";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <title>{title}</title>
    
    <!-- Open Graph Tags -->
    <OpenGraphTags 
      title={finalOgTitle}
      description={finalOgDescription}
      url={finalOgUrl}
      image={finalOgImage}
      locale={finalOgLocale}
    />
    
    <!-- Google Analytics 4 -->
    <GoogleAnalytics />
    
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body>
      <main>
        <slot />
      </main>
      <footer class="w-full">
        <div class="w-full flex justify-center items-center bg-gray-500 text-white text-sm py-4">
          Design og utvikling: <a href="https://na-kreativ.no" class="hover:text-gray-300 transition-colors ml-1">NA Kreativ</a>
        </div>
      </footer>
    </div>
    
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Find all company links
        const companyLinks = document.querySelectorAll('.company-link');
        
        companyLinks.forEach(link => {
          link.addEventListener('click', function(e) {
            e.preventDefault(); // Prevent default anchor behavior
            
            const targetId = (e.currentTarget as HTMLElement).getAttribute('data-target');
            if (!targetId) return;
            
            const targetElement = document.getElementById(targetId);
            
            if (targetElement) {
              // Smooth scroll to target
              targetElement.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });
      });
    </script>
  </body>
</html>

